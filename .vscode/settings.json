  "editor.formatOnSave": true,
  // ðŸ‘‰ dÃ©clenche les correctifs ESLint (indentation comprise) au save
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  // ðŸ‘‰ prÃ©cise les types de fichiers Ã  valider
  "eslint.validate": [
    "javascript",
