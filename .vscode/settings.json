{
  // ðŸ‘‰ active le formatage auto au save
  "editor.formatOnSave": true,
  // ðŸ‘‰ dÃ©clenche les correctifs ESLint (indentation comprise) au save
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  // ðŸ‘‰ prÃ©cise les types de fichiers Ã  valider
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue"
  ],
  // ðŸ‘‰ (optionnel) garde Volar actif pour le formatage Vue
  "vue.format.enable": false,
  "files.exclude": {
    ".output": true,
    "node_modules": true,
    ".nuxt": true,
    ".cache": true,
    ".turbo": true,
    "dist": true,
    "coverage": true,
    ".env": true,
    ".env.*": true,
    "*.log": true,
    "bun.lockb": true,
    ".git": true,
    ".gitignore": true,
    ".vscode": true,
    "bun.lock": true,
    "eslint.config.mjs": true,
    "package-lock.json": true,
    "tsconfig.json": true
  },
  // Toggle Excluded Files â€” configuration de groupe
  "toggle-excluded-files.groups": {
    "Bun/Nuxt Generated Files": [
      ".output",
      ".nuxt",
      "node_modules",
      ".cache",
      "dist",
      ".turbo",
      "coverage",
      "bun.lockb"
    ],
    "Dotenv & Logs": [
      ".env",
      ".env.*",
      "*.log"
    ]
  }
}